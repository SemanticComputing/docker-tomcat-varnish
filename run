#!/bin/sh

touch "$FILE_LOG_TOMCAT"
touch "$FILE_LOG_TOMCAT_ERR"
touch "$FILE_LOG_VARNISH"
touch "$FILE_LOG_VARNISH_ERR"

eval "$EXEC_TOMCAT" >> "$FILE_LOG_TOMCAT" 2>> "$FILE_LOG_TOMCAT_ERR" &
eval "$EXEC_VARNISH" >> "$FILE_LOG_VARNISH" 2>> "$FILE_LOG_VARNISH_ERR" &

# Tail logs to stdout
exec tail -f "$FILE_LOG_VARNISH" "$FILE_LOG_TOMCAT" "$FILE_LOG_TOMCAT_ERR" "$FILE_LOG_VARNISH_ERR"
